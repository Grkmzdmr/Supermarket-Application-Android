<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Payment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="ŞUAN İÇİN SADECE KAPIDA ÖDEME SEÇENEĞİMİZ VARDIR"
            android:gravity="center"
            android:layout_marginLeft="90dp"
            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Teslim Edilecek Adres:"
            android:layout_marginTop="100dp"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#323437"/>
        <EditText
            android:layout_width="380dp"
            android:layout_height="170dp"
            android:layout_marginTop="160dp"
            android:hint="Adres"
            android:id="@+id/payadress"
            android:gravity="top"
            android:maxLength="80"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Adresi Değiştir"
            android:layout_marginTop="340dp"
            android:layout_marginLeft="100dp"
            android:onClick="changeAdress2"
            android:id="@+id/paychangeadres"
            android:textColor="#FFFFFF"
            android:background="#0451AA"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SİPARİŞ VER"
            android:textColor="#FFFFFF"
            android:layout_marginTop="550dp"
            android:gravity="center"
            android:id="@+id/golastt"
            android:onClick="goLast"
            android:background="#0451AA"
            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Sipariş detaylarınız ve faturanız e-mailinize yollanacaktır."
            android:gravity="center"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="600dp"
            />


    </RelativeLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>