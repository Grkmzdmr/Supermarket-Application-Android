<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".LastScreen">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="BİZİ TERCİH ETTİĞİNİZ İÇİN TEŞEKKÜR EDERİZ"
       android:textSize="30sp"
       android:gravity="center"
       android:layout_marginTop="30dp"
       />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="20sp"
       android:text="Siparişiniz başarıyla oluşturulmuştur"
       android:gravity="center"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="150dp"/>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="En yakın zamanda telefon ile iletişime geçilecektir"
       android:layout_marginLeft="30dp"
       android:layout_marginTop="200dp"
       style="@style/AppTheme.NoActionBar"
       />
   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Ana Sayfaya Dön"
       android:id="@+id/backhome"
       android:textColor="#FFFFFF"
       android:background="#0451AA"
       android:onClick="backHome"
       android:layout_marginTop="530dp"
       android:layout_marginLeft="110dp"/>

        <ImageView
            android:id="@+id/delivery"
            android:layout_width="173dp"
            android:layout_height="169dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/delivery"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_creator="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_creator="1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/smoke1"
            android:layout_width="104dp"
            android:layout_height="103dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="345dp"
            android:layout_marginEnd="219dp"
            android:background="@drawable/smoke1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_creator="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_creator="1"
            app:layout_constraintTop_toTopOf="parent" />


    </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>